rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        // Allow credit updates for exchanges (Client-side transaction workaround)
        // Only allow updating 'credits' and 'booksSold'
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits', 'booksSold', 'booksListed']))
      );
    }
    
    // Books
    match /books/{bookId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.sellerId == request.auth.uid || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        // Allow marking as sold during purchase
        (request.resource.data.status == 'sold' && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']))
      );
      allow delete: if request.auth != null && (resource.data.sellerId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Exchanges/Transactions
    match /exchanges/{exchangeId} {
      allow read: if request.auth != null && (
        resource.data.buyerId == request.auth.uid || 
        resource.data.sellerId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
    }

    // Transactions
    match /transactions/{transactionId} {
      allow read: if request.auth != null && (
        resource.data.buyerId == request.auth.uid || 
        resource.data.sellerId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow create: if request.auth != null;
    }
  }
}
